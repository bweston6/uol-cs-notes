---
layout: none
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | replace: '\', '\\\\' | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "content"  : {{ post.content | jsonify }}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
